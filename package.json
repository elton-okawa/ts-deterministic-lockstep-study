{
  "private": true,
  "name": "ts-game-network-colyseus",
  "version": "1.0.0",
  "description": "npm init template for bootstrapping an empty Colyseus project",
  "main": "lib/index.js",
  "scripts": {
    "start": "ts-node-dev --respawn --transpile-only src/index.ts",
    "loadtest": "colyseus-loadtest loadtest/example.ts --room my_room --numClients 2",
    "build:server": "tsc && node node_modules/copyfiles/copyfiles package.json ./lib && node node_modules/copyfiles/copyfiles arena.env ./lib",
    "build:client": "cd client && tsc && cd .. && node node_modules/copyfiles/copyfiles --error ./client/lib/**/* ./client/static/* ./client/index.html ./lib",
    "build": "yarn clean && yarn build:server && yarn build:client",
    "clean": "node node_modules/rimraf/bin lib client/lib",
    "test": "mocha --require ts-node/register test/**_test.ts --exit --timeout 15000",
    "schema-codegen": "schema-codegen src/rooms/schema/* --ts --output ./client/typing",
    "list": "tsc --listFiles"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@colyseus/loadtest": "^0.14.4",
    "@colyseus/testing": "^0.14.21",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.1",
    "@types/matter-js": "^0.17.7",
    "@types/mocha": "^8.2.3",
    "@types/pixi.js": "^5.0.0",
    "copyfiles": "^2.4.1",
    "mocha": "^9.0.2",
    "rimraf": "^2.7.1",
    "ts-node": "^8.1.0",
    "ts-node-dev": "^1.0.0-pre.63",
    "typescript": "^4.6.4"
  },
  "dependencies": {
    "@colyseus/arena": "^0.14.22",
    "@colyseus/monitor": "^0.14.20",
    "colyseus": "^0.14.20",
    "cors": "^2.8.5",
    "express": "^4.16.4",
    "matter-js": "^0.18.0"
  }
}
